{
	"version": "2.0.0",
	"options": {
        "cwd": "${workspaceFolder}\\build"
    },
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake: 配置",
			"command": "cmake",
			"args" : [
				"--build",
				"${workspacesFolder}/build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "CMake 模板 配置 任务"
		},
		{
			"type":"cmake",
			"label": "C++: gcc build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileBasenameNoExtension}.out",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "C++ gcc 编译当前文件任务"
		}
	]
}